<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>Agregar Usuario</h1>
            <form action="/users/add-user" method="POST">
                <div class="form-group">
                    <label for="name">Carnet de identidad</label>
                    <input
                        type="text"
                        class="form-control"
                        id="id"
                        name="id"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="email">Correo Electrónico</label>
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="roleId">Rol</label>
                    <select
                        class="form-control"
                        id="roleId"
                        name="roleId"
                        required
                    >
                        {{#each roles}}
                            <option value="{{this.id}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>
</div>